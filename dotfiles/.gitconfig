[user]
	name = Andrei Matei
	email = andreimatei1@gmail.com
[alias]
  rc = rebase --continue
  rm = rebase -i master
	ro = rebase origin/master
  fpa = fetch --all â€”prune
  find-merge = "!sh -c 'commit=$0 && branch=${1:-HEAD} && (git rev-list $commit..$branch --ancestry-path | cat -n; git rev-list $commit..$branch --first-parent | cat -n) | sort -k2 | uniq -f1 -d | sort -n | tail -1 | cut -f2'"
  show-merge = "!sh -c 'merge=$(git find-merge $0 $1) && [ -n \"$merge\" ] && git show $merge'"
	lg = log --color --graph --abbrev-commit -n 10\n           --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr)%C(bold blue)<%an>%Creset'
[interactive]
	singleKey = yes
[merge]
  tool = p4mergetool
  conflictStyle = zdiff3
[mergetool "p4mergetool"]
	cmd = /home/andrei/p4/bin/p4merge $PWD/$BASE $PWD/$REMOTE $PWD/$LOCAL $PWD/$MERGED
	trustExitCode = false
[mergetool]
	keepBackup = false
[diff]
	tool = vimdiff
  algorithm = histogram
  colorMoved = plain
  mnemonicPrefix = true
  renames = true
[help]
	autocorrect = 1
[core]
	excludesfile = ~/.gitignore
	pager = less -F -X
[rebase]
  autoSquash = true
  autoStash = true
  updateRefs = true
[cockroachdb]
	disable-commit-template = true
[init]
	defaultBranch = main
[http]
  cookiefile = /home/andrei/.gitcookies
[sendemail]
    smtpServer = smtp.gmail.com
    smtpServerPort = 587
    smtpEncryption = tls
    smtpUser = andreimatei1@gmail.com
    # (Optional: we'll leave this commented out and use a different way)
    # smtpPass = xxx
[credential]
    helper = store
[column]
  ui = auto
[branch]
  sort = -committerdate
[tag]
  sort = version:refname
[push]
  autoSetupRemote = true
  followTags = true
[fetch]
  prune = true
  pruneTags = true
[commit]
  verbose = true
[rerere]
  enabled = true
  autoupdate = true
